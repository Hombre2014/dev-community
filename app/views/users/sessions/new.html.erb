<div class="col-lg-6 mx-auto mt-5 mb-5">
  <div class="card mt-4">
    <div class="card-header">
      <h2 class="card-title text-center">Login</h2>
    </div>
    <div class="card px-3 align-items-center">
      <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: {data: {turbo: false}}) do |f| %>
        <div class="form-group mt-4">
          <%= f.label :email_or_username, class: "mb-2 mt-2" %>
          <%= f.text_field :login, class: "form-control" %>
        </div>

        <div class="field">
          <%= f.label :password, class: "mb-2 mt-2" %>
          <%= f.password_field :password, autocomplete: "current-password", class: "form-control" %>
        </div>

        <% if devise_mapping.rememberable? %>
          <div class="field mt-2">
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me %>
          </div>
        <% end %>

        <div class="actions mt-3">
          <%= f.submit "Log in", class: "btn btn-primary mx-auto d-block" %>
        </div>
      <% end %>

      <%= render "users/shared/links" %>
    </div>
  </div>
</div>
