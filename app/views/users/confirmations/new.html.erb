<div class="col-lg-8 mx-auto mt-5 mb-5">
  <div class="card mt-4">
    <div class="card-header">
      <h2 class="card-title text-center">Resend confirmation instructions</h2>
    </div>
    <div class="card px-3 align-items-center">
      <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
        <%= render "users/shared/error_messages", resource: resource %>

        <div class="form-group row">
          <div class="col-lg-12 mt-2">
            <%= f.label :email, class: "mb-2" %>
            <%= f.email_field :email, class: "form-control"  %>
          </div>
        </div>

        <div class="actions mt-4 mb-4">
          <%= f.submit "Resend confirmation instructions", class: "btn btn-primary mx-auto d-block" %>
        </div>    
      <% end %>
    </div>
  </div>
</div>
